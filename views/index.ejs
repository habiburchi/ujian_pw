<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DATA KELAS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h3 class="mb-4"><%= title %></h3>

        <table class="table">
            <thead class="table-dark"> 
                    <th scope="col">id</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Kelas</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% let id=1 %>
                <% for (let data_kelas of users) { %>
                <tr>
                    <th scope="row"><%= id %></th>
                    <td><%= data_kelas.Nama %></td>
                    <td><%= data_kelas.Kelas %></td>
                    <td>
                        <!-- Tambahkan tombol atau tautan untuk edit dan delete -->
                        <a href="/edit/<%= data_kelas.id %>" class="btn btn-primary">Edit</a>
                        <a href="/delete/<%= data_kelas.id %>" class="btn btn-danger"
                            onclick="return confirm('Apakah Anda yakin ingin menghapus?')">Delete</a>
                    </td>
                </tr>
                <% id++ %>
                <% } %>
            </tbody>
        </table>

        <form action="/tambah" method="post" class="mt-5">
            <h3>TAMBAH MURID BARU</h3>
            <div class="mb-3">
                <label for="Nama" class="form-label">Nama</label>
                <input type="text" name="Nama" class="form-control">
            </div>
            <div class="mb-3">
                <label for="Kelas" class="form-label">Kelas</label>
                <input type="text" name="Kelas" class="form-control">
            </div>
            <input type="submit" class="btn btn-danger" value="Tambahkan" />
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>
